{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*", "server/types/*"]
    },
    "sourceMap": true,
    "target": "esnext",
    "types": ["express", "jest", "node", "supertest"]
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["server/**/*"]
}
