{
  "name": "familiar-core-server",
  "version": "1.0.0",
  "description": "Core server for Familiar: Mythic Arena",
  "author": "Denny S. Temple (https://dentemple.com/)",
  "license": "UNLICENSED",
  "private": true,
  "main": "dist",
  "scripts": {
    "build": "tsc",
    "start": "nodemon dist",
    "start:prod": "node dist",
    "test": "jest -i",
    "test:watch": "jest -i --watch",
    "-----": "-----",
    "audit": "npm audit fix",
    "audit:check": "npm audit",
    "update": "ncu -u && npm i",
    "update:check": "ncu",
    "format": "prettier \"server/**/**.{ts,js,css,json,md}\"",
    "format:check": "prettier --check \"server/**/**.{ts,js,css,json,md}\""
  },
  "dependencies": {
    "admin-client": "^1.0.0",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.0",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "rankings-client": "^1.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.22",
    "@types/node": "^12.12.6",
    "@types/supertest": "^2.0.8",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "linkemon": "0.1.1",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "npm-check-updates": "^3.2.0",
    "prettier": "^1.18.2",
    "superagent": "^5.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
